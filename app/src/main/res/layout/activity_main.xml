<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicativo de Banco"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

    <TextView
        android:id="@+id/txtSaldo"
        android:layout_width="159dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="10000"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btpagar"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:onClick="pagar"
        android:text="PAGAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btpix" />

    <Button
        android:id="@+id/btpix"
        android:layout_width="135dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:onClick="pix"
        android:text="PIX"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSaldo" />

    <Button
        android:id="@+id/btdepos"
        android:layout_width="139dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:onClick="depositar"
        android:text="DEPOSITAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttransferencia" />

    <Button
        android:id="@+id/bttransferencia"
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:onClick="transferir"
        android:text="TRANSFERIR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btpagar" />

</androidx.constraintlayout.widget.ConstraintLayout>